<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
	<definition name="layout-tiles" template="/WEB-INF/tiles/layouts/templates/layout.jsp">
		<put-attribute name="include" value="/WEB-INF/tiles/layouts/include.jsp"/>
		<put-attribute name="header" value="/WEB-INF/tiles/layouts/templates/header.jsp"/>
		<put-attribute name="aside" value="/WEB-INF/tiles/layouts/templates/aside.jsp"/>
		<put-attribute name="footer" value="/WEB-INF/tiles/layouts/templates/footer.jsp"/>
	</definition>
	<definition name="*.layout" extends="layout-tiles">
		<put-attribute name="include" value="/WEB-INF/tiles/layouts/{1}.jsp"/>
		<put-attribute name="main" value="/WEB-INF/views/{1}.jsp"/>
	</definition>
</tiles-definitions>